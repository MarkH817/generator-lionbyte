{
  "license":"MIT",
  "bin": {
  },
  "main":"src/index.js",
  "scripts": {
    "lint":"standard",
    "lint:fix":"prettier --write **/*.js && standard --fix",
    "report":"nyc report --reporter=lcov",
    "test":"standard && nyc mocha"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ],
    "*.{md,less}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "it",
      "test",
      "fixture"
    ],
    "ignore": []
  }
}
