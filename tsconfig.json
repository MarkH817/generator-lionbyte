{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noEmit": true,
    "strictNullChecks": true,
    "target": "ES2021"
  },
  "include": ["declarations.d.ts", "generators/**/*.js"],
  "exclude": ["**/templates/**/*.js"]
}
