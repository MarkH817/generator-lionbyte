{
  "name": "generator-lionbyte",
  "version": "1.4.0",
  "description": "Generate a JavaScript project",
  "author": "Mark Hernandez <mark@lion-byte.com> (https://www.lion-byte.com)",
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "generator",
    "scaffold",
    "project",
    "nodejs",
    "yeoman-generator"
  ],
  "devDependencies": {
    "@types/node": "^10.11.4",
    "@types/yeoman-generator": "^3.0.0",
    "@types/yosay": "0.0.29",
    "coveralls": "^3.0.2",
    "husky": "^1.1.0",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "standard": "^12.0.1",
    "typescript": "^3.1.1",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^1.9.1"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "yeoman-generator": "^3.1.1",
    "yosay": "^2.0.2"
  },
  "scripts": {
    "lint": "standard",
    "lint:fix": "prettier --write **/*.js && standard --fix",
    "lint:type": "tsc --pretty",
    "test": "standard && tsc && jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ],
    "*.{md,less}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "standard": {
    "globals": [
      "afterAll",
      "afterEach",
      "beforeAll",
      "beforeEach",
      "describe",
      "expect",
      "jest",
      "test"
    ]
  },
  "repository": "MarkH817/generator-lionbyte",
  "license": "MIT"
}
