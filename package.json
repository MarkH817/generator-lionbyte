{
  "name": "generator-lionbyte",
  "version": "1.2.0",
  "description": "Generate a NodeJS project",
  "author": {
    "name": "Mark Hernandez",
    "email": "mark@lion-byte.com",
    "url": "https://www.lion-byte.com"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "generator",
    "scaffold",
    "project",
    "nodejs",
    "yeoman-generator"
  ],
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.0.1",
    "husky": "^0.15.0-rc.13",
    "lint-staged": "^7.1.2",
    "mocha": "^5.2.0",
    "nyc": "^11.8.0",
    "prettier": "^1.12.1",
    "standard": "^11.0.1",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^1.7.2"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "yeoman-generator": "^2.0.5",
    "yosay": "^2.0.2"
  },
  "scripts": {
    "lint": "standard",
    "lint:fix": "prettier --write **/*.js && standard --fix",
    "report": "nyc report --reporter=lcov",
    "test": "standard && nyc mocha -A"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ],
    "*.{md,less}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "it"
    ]
  },
  "repository": "MarkH817/generator-lionbyte",
  "license": "MIT"
}
