{
  "name": "generator-lionbyte",
  "version": "1.1.0",
  "description": "Generate a NodeJS project",
  "author": {
    "name": "Mark Hernandez",
    "email": "mark@lion-byte.com",
    "url": "https://www.lion-byte.com"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "generator",
    "scaffold",
    "project",
    "nodejs",
    "yeoman-generator"
  ],
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.3",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.0",
    "gulp-hub": "^0.8.0",
    "gulp-plumber": "^1.1.0",
    "gulp-sequence": "^0.4.6",
    "gulp-sourcemaps": "^2.6.2",
    "husky": "^0.15.0-rc.13",
    "lint-staged": "^7.0.4",
    "mocha": "^4.0.1",
    "nsp": "^3.1.0",
    "nyc": "^11.4.1",
    "prettier": "^1.11.1",
    "standard": "^10.0.3",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "scripts": {
    "build": "gulp build",
    "dev": "gulp",
    "lint": "standard",
    "lint:fix": "prettier --write **/*.js && standard --fix",
    "prepublishOnly": "nsp check && npm run build",
    "report": "nyc report --reporter=lcov",
    "test": "standard && nyc mocha -A"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ],
    "*.{md,less}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "it"
    ]
  },
  "repository": "MarkH817/generator-lionbyte",
  "license": "MIT"
}
